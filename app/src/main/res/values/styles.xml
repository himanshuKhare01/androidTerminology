<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
    <style name="IntroTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

  <style name="InputTheme" parent="Theme.AppCompat.Light.NoActionBar">
      <item name="colorPrimaryDark">#6D4C41</item>
      <item name="colorPrimary">@color/color5</item>
      <item name="colorAccent">@color/color2</item>
  </style>
    <style name="myDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/color8</item>
        <item name="colorPrimaryDark">@color/color6</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
